{
  "name": "my-pokedex-app",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "start": "npm run build & npm run app",
    "build": "cross-env NODE_ENV=production npx webpack",
    "dev-build": "cross-env NODE_ENV=development npx webpack",
    "app": "node bin/index.js",
    "db": "npx json-server --watch server/db.json",
    "development": "cross-env NODE_ENV=development npx webpack serve",
    "start-prod": "npm-run-all --parallel build app",
    "start-dev": "npm-run-all --parallel db development",
    "test": "jest test --noStackTrace ---silent --verbose",
    "test-cov": "jest test --noStackTrace ---silent --verbose --coverage"
  },
  "jest": {
    "resetMocks": false,
    "setupFiles": [
      "jest-localstorage-mock"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(scss|less)$": "identity-obj-proxy",
      "^@scss(.*)$": "<rootDir>/src/app/scss$1",
      "^@components(.*)$": "<rootDir>/src/app/components$1",
      "^@hooks(.*)$": "<rootDir>src/app/hooks$1",
      "^@HOCs(.*)$": "<rootDir>/src/app/HOCs$1",
      "^@pages(.*)$": "<rootDir>/src/app/pages$1",
      "^@store(.*)$": "<rootDir>/src/app/store$1",
      "^@containers(.*)$": "<rootDir>/src/app/containers$1",
      "^@utils(.*)$": "<rootDir>/src/app/utils$1",
      "^@locales(.*)$": "<rootDir>/src/locales$1"
    }
  },
  "author": "Maxim Novikov <maximkanv@gmail.com>",
  "license": "ISC",
  "homepage": ".",
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.1",
    "@types/jest": "^26.0.23",
    "axios": "^0.21.1",
    "classnames": "^2.3.1",
    "core-js": "^3.14.0",
    "express": "^4.17.1",
    "formik": "^2.2.9",
    "http-errors": "^1.8.0",
    "i18next": "^20.3.1",
    "json-server": "^0.16.3",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.10.0",
    "react-image-fallback": "^8.0.0",
    "react-infinite-scroller": "^1.2.4",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "redux": "^4.1.0",
    "regenerator-runtime": "^0.13.7"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@testing-library/dom": "^8.0.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.1.9",
    "axios-mock-adapter": "^1.19.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^27.0.5",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^9.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.6",
    "eslint": "^7.24.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-functional": "^3.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.5",
    "jest-environment-jsdom": "^27.0.5",
    "jest-localstorage-mock": "^2.4.14",
    "jsdom": "^16.6.0",
    "mini-css-extract-plugin": "^1.6.0",
    "node-sass": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^6.0.0",
    "postcss": "^8.3.0",
    "postcss-loader": "^5.3.0",
    "postcss-preset-env": "^6.7.0",
    "pug": "^3.0.2",
    "pug-loader": "^2.4.0",
    "sass-loader": "^12.0.0",
    "stylelint": "^10.0.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.6.1",
    "terser-webpack-plugin": "^5.1.3",
    "webpack": "^5.33.2",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
